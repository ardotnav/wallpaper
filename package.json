{
  "name": "wallpaper-generator",
  "version": "1.0.0",
  "description": "Auto-updating year progress wallpaper generator",
  "main": "api/wallpaper.js",
  "scripts": {
    "dev": "node server.js",
    "start": "node server.js",
    "vercel:dev": "vercel dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@vercel/node": "^3.0.7",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.x"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "utils/**/*.js",
      "api/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
